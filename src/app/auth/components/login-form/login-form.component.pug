.signin-form
    h2.signin-form__title(translate) AUTH.SIGN_IN
    form([formGroup]="form", (ngSubmit)="submit()")
        .signin-form__step.signin__step--1(*ngIf="!phoneVerified")
            .form-group
                input.signin-form__phone-control.form-control(type="text", formControlName="phone")
                .error-messages(*ngIf="form.get('phone').touched && form.get('phone').invalid")
                    .error-messages__item(*ngIf="form.get('phone').hasError('required')", translate) VALIDATION.REQUIRED
            .signin-form__submit-row
                .signin-form__secondary-action
                button.btn.btn-primary.signin-form__submit-btn(type="button", (click)="verifyPhone()", translate) ALL.NEXT
        .signin-form__step.signin__step--2(*ngIf="phoneVerified")
            .form-group
                input.signin-form__pin-control.form-control(type="text", formControlName="pin")
                .error-messages(*ngIf="form.get('pin').touched && form.get('pin').invalid")
                    .error-messages__item(*ngIf="form.get('pin').hasError('required')", translate) VALIDATION.REQUIRED
            .signin-form__submit-row
                .signin-form__secondary-action
                    .signin-form__action.link.link--back.link--fake(role="button", (click)="restore()", translate) ALL.BACK
                    a.signin-form__action.link(routerLink="/logowanie", translate) AUTH.RESTORE_PIN
                button.btn.btn-primary.signin-form__submit-btn(type="submit", translate) AUTH.LOG_IN
