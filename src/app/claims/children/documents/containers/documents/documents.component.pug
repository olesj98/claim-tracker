.documents.row
    .col-12.mb-4
        ng-container(*ngIf="staticDocuments$ | async as staticDocuments")
            ng-container(*ngIf="staticDocuments.length")
                .h5.text.text--divider-bottom.mb-3(translate) DOCUMENTS.SHARED_DOCUMENTS
                pko-document.mb-2(
                    *ngFor="let document of staticDocuments",
                    [filename]="'DOCUMENT_TYPE.' + document.documentType | translate",
                    [postDate]="document.createDate")
